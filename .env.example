# Datadog API Configuration (Required)
DD_API_KEY=your_datadog_api_key_here
DD_APP_KEY=your_datadog_app_key_here
DD_SITE=us3.datadoghq.com

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080

# Debug Configuration
# Debug levels: NONE, INFO, DEBUG, TRACE
MCP_DEBUG_LEVEL=INFO

# Enable/disable specific debug features
MCP_DEBUG_REQUESTS=false
MCP_DEBUG_RESPONSES=false
MCP_DEBUG_TIMING=false
MCP_DEBUG_PARAMETERS=false
MCP_DEBUG_PRETTY_PRINT=true
MCP_DEBUG_ERRORS=true
MCP_DEBUG_MASK_SENSITIVE=true

# Legacy Logging Configuration (deprecated, use MCP_DEBUG_LEVEL instead)
LOG_LEVEL=INFO

# === DEBUG PRESETS ===
# Uncomment one of these sections for common debugging scenarios

# BASIC TROUBLESHOOTING - Good for general issues
# MCP_DEBUG_LEVEL=DEBUG
# MCP_DEBUG_REQUESTS=true
# MCP_DEBUG_RESPONSES=true
# MCP_DEBUG_TIMING=true

# FULL TRACE MODE - Maximum debugging (can be verbose)
# MCP_DEBUG_LEVEL=TRACE
# MCP_DEBUG_REQUESTS=true
# MCP_DEBUG_RESPONSES=true
# MCP_DEBUG_TIMING=true
# MCP_DEBUG_PARAMETERS=true

# 400 BAD REQUEST DEBUGGING - Specifically for protocol errors
# MCP_DEBUG_LEVEL=TRACE
# MCP_DEBUG_REQUESTS=true
# MCP_DEBUG_PARAMETERS=true
# MCP_DEBUG_ERRORS=true

# API CALL DEBUGGING - For Datadog API issues
# MCP_DEBUG_LEVEL=DEBUG
# MCP_DEBUG_RESPONSES=true
# MCP_DEBUG_TIMING=true

# NO DATA DEBUGGING - For when tools return empty results
# MCP_DEBUG_LEVEL=TRACE
# MCP_DEBUG_REQUESTS=true
# MCP_DEBUG_RESPONSES=true
# MCP_DEBUG_TIMING=true

